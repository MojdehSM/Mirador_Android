<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChildrenActivity" >

    <Button
        android:id="@+id/edit_parent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:minHeight="48dip"
        android:minWidth="150dp"
        android:text="@string/sectionParent" />

    <TextView
        android:id="@+id/textPassEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_parent_button"
        android:layout_alignLeft="@+id/edit_parent_button"
        android:layout_marginBottom="52dp"
        android:text="@string/text_edit_parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_parent_button"
        android:layout_below="@+id/edit_parent_button"
        android:layout_marginTop="17dp"
        android:text="@string/text_block" />

    <Button
        android:id="@+id/block_unblock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_centerVertical="true"
        android:minWidth="150dp"
        android:text="@string/block" />


</RelativeLayout>
